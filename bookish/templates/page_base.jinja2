{% extends "base.jinja2" %}

{% block styles %}
    <link rel="stylesheet" href="{{ rel(config.PYGMENTS_CSS | d("/static/css/pygments/autumn.css")) }}">
    <link rel="stylesheet" href="{{ rel("/static/scss/page.css") }}">
{% endblock %}

{% block scripts %}
    <script type="text/javascript" src="{{ rel("/static/js/flot/jquery.flot.min.js") }}"></script>
    <script type="text/javascript" src="{{ rel("/static/js/flot/jquery.flot.resize.min.js") }}"></script>
    <script type="text/javascript" src="{{ rel("/static/js/js.cookie.js") }}"></script>
    <script type="text/javascript" src="{{ rel("/static/js/search.js") }}"></script>
    <script type="text/javascript" src="{{ rel("/static/js/page.js") }}"></script>
{% endblock %}

{% block body %}
    {% block navbar %}
        <nav role="navigation">
            {% block brand %}{% endblock %}
            {% block leftbar %}{% endblock %}
            {% block searchbox %}
                <span id="navsearch">
                    <span id="qbtn" class="search-button"><i class="fa fa-search"></i></span>
                    <input id="q" class="search"
                           placeholder="Search"
                           value="{{ q | escape }}"
                           autocomplete="off"
                           data-lang="{{ pagelang }}"
                    >
                </span>
            {% endblock %}
        </nav>
    {% endblock %}

    {% block main %}
    {% endblock %}
{% endblock %}
